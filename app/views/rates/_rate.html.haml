%tr{:id => "rate_#{rate.id}", :class => "body #{cycle(:odd, :even)}"}
  %td= rate.prefix
  %td= rate.initial_time
  %td= rate.initial_cost
  %td= rate.interval_time
  %td= rate.interval_cost
  %td
  %td= link_to image_tag("my_images/edit.png", :alt => "Edit"), edit_rate_path(rate), :class => 'popme'
  %td= link_to image_tag("my_images/delete.png", :alt => "Delete"), rate, :confirm => 'Are you sure?', |
                                :method => :delete, |
                                :remote => true

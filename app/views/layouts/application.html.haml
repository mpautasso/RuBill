!!!Strict
%html
  %head
    %title="Rubill"

    = active_scaffold_includes

    = stylesheet_link_tag :all, 'application.css'
    = javascript_include_tag :defaults
    = csrf_meta_tag

%body
  - flash.each do |name, msg|
    = content_tag :div, msg, :id => "flash_#{name}"
    
  - if current_user 
    = link_to "logout", destroy_user_session_url()
  - else
    = link_to "logout", destroy_user_session_url()
    
  = yield

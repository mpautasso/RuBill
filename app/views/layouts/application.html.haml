!!!Strict
%html
  %head
    %title="RuBill v0.1"
    = stylesheet_link_tag 'glip.css', 'application.css'
    = javascript_include_tag :defaults
    = csrf_meta_tag

    = active_scaffold_includes

    / *************************************************************************
    / BluePrint CSS Framework 
    / ************************************************************************* 
    = stylesheet_link_tag 'blueprint/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'blueprint/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'blueprint/ie.css', :media => 'screen, projection'

%body
  .header
    .title
      RuBill v0.1

    .subtitle


    .flashes
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"


  .main-container
    .leftbar
      .title
        Navigation bar

      = render_navigation

      .info
        = yield :info
      
    .main
      = yield

  .footer Copyright &copy; #{Time.now.year} MKE Solutions

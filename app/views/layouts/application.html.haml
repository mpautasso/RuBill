!!!Strict
%html
  %head
    %title="Rubill"

    = active_scaffold_includes

    = stylesheet_link_tag 'glip.css', 'sn.css'
    = javascript_include_tag :defaults
    = csrf_meta_tag

%body
  - flash.each do |name, msg|
    = content_tag :div, msg, :id => "flash_#{name}"
       

  = render_navigation(:renderer => :breadcrumbs, :join_with => ' &raquo; ')

  - if current_user
    Login as: 
    =current_user.email
    = link_to "Sign out", destroy_user_session_url
  - else
    = link_to "Sign in", new_user_session_url

  = yield
  .footer Copyright &copy; #{Time.now.year} MKE Solutions

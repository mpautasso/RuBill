%h1 Rubill 0.1
.block#block-login
  %h2 Sign up
  .content.login
    .flash
      - flash.each do |type, message|
        %div{ :class => "message #{type}" }
          %p= message
      =# form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form" }) do |f|
      = form_for @user, :url => user_registration_path(@user) do |f|
        = devise_error_messages!
        .group.wat-cf
          .left= f.label :name, :class => "label right"
          .right= f.text_field :name, :class => "text_field"
        .group.wat-cf
          .left= f.label :fullname, :class => "label right"
          .right= f.text_field :fullname, :class => "text_field"
        .group.wat-cf
          .left= f.label :email, :class => "label right" 
          .right= f.text_field :email, :class => "text_field"
        .group.wat-cf
          .left= f.label :password, :class => "label right"
          .right= f.password_field :password, :class => "text_field"
        .group.wat-cf
          .left= f.label :password_confirmation, :class => "label right"
          .right= f.password_field :password_confirmation, :class => "text_field"
        .group.wat-cf
          .right
            %button.button{ :type => "submit" }
              = image_tag "web-app-theme/icons/key.png"
              Sign up

    = render :partial => "devise/shared/links"

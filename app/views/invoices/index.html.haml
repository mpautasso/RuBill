- if !@invoices.empty?
  .container
    .span-20{:style => "background-color: blue;"}
      .span-4
        Invoide #

      .span-8
        User Name

      .span-8.last
        Total

    .span-2.prepend-1
      = link_to "New Invoice", new_invoice_path()


    - @invoices.each do |invoice|
      .span-20{:style => "background-color: blue;"}
        .span-4
          = invoice.id

        .span-8
          = invoice.user.email

        .span-8.last
          = invoice.total

- else
  .test
    There are not invoices saved yet


%br
.container.showgrid
  = form_for Invoice.new, :url => filter_calls_invoices_path(), :remote => true do |f|
    .column
      .span-6
        = f.label :from, 'From: '
        = f.date_select :from
      .span-6
        = f.label :to, 'To:'
        = f.date_select :to
      .span-2
        = f.submit 'Go'



.container{:style => "width:500px;"}
  = form_for @device do |f|
    -if @device.errors.any?
      #error_explanation
        %h2= "#{pluralize(@device.errors.count, "error")} prohibited this device from being saved:"
        %ul
          - @device.errors.full_messages.each do |msg|
            %li= msg

    .column 
      .span-4
        .field
          = f.label :user_id
      .span-8
        = f.select 'user_id', User.all.collect{|x| [x.name, x.id]}

    .column 
      .span-4
        .field
          = f.label :exten
      .span-8
        = f.text_field :exten
    
    .column 
      .span-4
        .field
          = f.label :priority
      .span-8
        = f.text_field :priority

    .column 
      .span-4
        .field
          = f.label :app
      .span-8
        = f.text_field :app

    .column 
      .span-4
        .field
          = f.label :app_data
      .span-8
        = f.text_field :app_data

    .column 
      .prepend-9
        = f.submit 'Save', :id => 'submit_button'

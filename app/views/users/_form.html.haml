.container{:style => "width:600px"}
  = form_for @user, :url => create_user_path, :remote => true do |f|
    #errors
    
    .column 
      .span-4
        .field
          = f.label :name
      .span-8
        = f.text_field :name
  
    .column
      .span-4
        .field
          = f.label :last_name
      .span-8
        = f.text_field :last_name

    .column
      .span-4
        .field
          = f.label :email
      .span-8
        = f.text_field :email

    .column
      .span-4
        .field
          = f.label :password
      .span-8
        = f.password_field :password

    .column 
      .span-4
        .field
          = f.label :password_confirmation
      .span-8
        = f.password_field :password_confirmation
    
    .column 
      .span-12
        .actions{:style => 'float:right;'}
          = f.submit 'Save', :id => 'submit_button' 
